@model ContractMaster.models.Contract

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Contract</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" asp-for="ContractId"/>
            <fieldset>
                <legend>Client Data</legend>
                <div class="form-group">
                    <label asp-for="ContractDetail.ClientId" class="control-label"></label>
                    <select asp-for="ContractDetail.ClientId" asp-items="ViewBag.ClientId" class="form-control"></select>
                    <span asp-validation-for="ContractDetail.ClientId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="StartDate" class="control-label"></label>
                    <input asp-for="StartDate" class="form-control" />
                    <span asp-validation-for="StartDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="EndDate" class="control-label"></label>
                    <input asp-for="EndDate" class="form-control" />
                    <span asp-validation-for="EndDate" class="text-danger"></span>
                </div>
                <input type="hidden" asp-for="AddDate" class="form-control" />
                <div class="form-group">
                    <label asp-for="ContractDetail.Description" class="control-label"></label>
                    <input asp-for="ContractDetail.Description" class="form-control" />
                    <span asp-validation-for="ContractDetail.Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ContractDetail.BuyerId" class="control-label"></label>
                    <select asp-for="ContractDetail.BuyerId" class="form-control" asp-items="ViewBag.BuyerId"></select>
                    <span asp-validation-for="ContractDetail.BuyerId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ContractDetail.BidDate" class="control-label"></label>
                    <input asp-for="ContractDetail.BidDate" class="form-control" />
                    <span asp-validation-for="ContractDetail.BidDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ContractDetail.BidNumber" class="control-label"></label>
                    <input asp-for="ContractDetail.BidNumber" class="form-control" />
                    <span asp-validation-for="ContractDetail.BidNumber" class="text-danger"></span>
                </div>
            </fieldset>
            <fieldset>
                <legend>Contractor Data</legend>
                <div class="form-group">
                    <label class="control-label">Contract Name</label>
                    <input asp-for="ContractDetail.ContractName" class="form-control" />
                    <span asp-validation-for="ContractDetail.ContractName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Contractor</label>
                    <select asp-for="ContractDetail.ContractorId" class="form-control" asp-items="ViewBag.ContractorId"></select>
                    <span asp-validation-for="ContractDetail.ContractorId" class="text-danger"></span>
                </div>
                <input type="hidden" asp-for="ContractDetail.Contractor.ContractorNavigation.ContactPersonNavigation.Id" />
                <input type="hidden" asp-for="ContractDetail.Contractor.ContractorNavigation.ContactPersonNavigation.Company" class="form-control" />
                <input type="hidden" asp-for="ContractDetail.Contractor.ContractorNavigation.CompanyName" class="form-control" />
                <input type="hidden" asp-for="ContractDetail.Contractor.ContractorNavigation.ContactPersonNavigation.CompanyId" class="form-control" />

                <div class="form-group">
                    <input type="hidden" asp-for="ContractDetail.Contractor.ContractorNavigation.ContactPersonNavigation.Name" class="form-control"/>
                </div>
                <div class="form-group">
                    <label class="control-label">Phone</label>
                    <input asp-for="ContractDetail.Contractor.ContractorNavigation.ContactPersonNavigation.Phone" class="form-control" />
                    <span asp-validation-for="ContractDetail.Contractor.ContractorNavigation.ContactPersonNavigation.Phone" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Email</label>
                    <input asp-for="ContractDetail.Contractor.ContractorNavigation.ContactPersonNavigation.Email" class="form-control" />
                    <span asp-validation-for="ContractDetail.Contractor.ContractorNavigation.ContactPersonNavigation.Email" class="text-danger"></span>
                </div>
            </fieldset>
            <fieldset>
                <legend>Project Data</legend>
                <div class="form-group">
                    <label asp-for="ProjectData.TenderTitle" class="control-label"></label>
                    <input asp-for="ProjectData.TenderTitle" class="form-control" />
                    <span asp-validation-for="ProjectData.TenderTitle" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ContractDetail.SubCategoryId" class="control-label"></label>
                    <select asp-for="ContractDetail.SubCategoryId" asp-items="ViewBag.SubcategoryId" class="form-control"></select>
                    <span asp-validation-for="ContractDetail.SubCategoryId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ProjectData.Description" class="control-label"></label>
                    <input asp-for="ProjectData.Description" class="form-control" />
                    <span asp-validation-for="ProjectData.Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ProjectData.PromisedDays" class="control-label"></label>
                    <input asp-for="ProjectData.PromisedDays" class="form-control" />
                    <span asp-validation-for="ProjectData.PromisedDays" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ProjectData.ActualStartDate" class="control-label"></label>
                    <input asp-for="ProjectData.ActualStartDate" class="form-control" />
                    <span asp-validation-for="ProjectData.ActualStartDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ProjectData.ActualCompeletionDate" class="control-label"></label>
                    <input asp-for="ProjectData.ActualCompeletionDate" class="form-control" />
                    <span asp-validation-for="ProjectData.ActualCompeletionDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ProjectData.ContractAwardAmount" class="control-label"></label>
                    <input asp-for="ProjectData.ContractAwardAmount" class="form-control" />
                    <span asp-validation-for="ProjectData.ContractAwardAmount" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ProjectData.ContractCompletionAmount" class="control-label"></label>
                    <input asp-for="ProjectData.ContractCompletionAmount" class="form-control" />
                    <span asp-validation-for="ProjectData.ContractCompletionAmount" class="text-danger"></span>
                </div>
            </fieldset>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
