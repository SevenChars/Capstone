        <script type="text/javascript">

            less = {
                env: "development", // or "production"
                async: true       // load imports async
            };
        </script>*@
</head>
<body>
    <div id="page" class="container-fluid">
        <header id="about" class="site-header" role="banner">
            <div class="logo" style="text-align: center"><a href="#" title="QCSolver" rel="home"><img width="300" height="auto" src="/css/images/content/business_logo.png" class="attachment-logo" alt="LOGO.png" /></a></div>
            <h1>Search Contracts</h1><br /><br />
            <div class="separator"></div>
            <div class="row-fluid">
                <div class="span12">
                    <form asp-controller="Contract" asp-action="Index" method="get" style="text-align: left">
                        <div class="form-group" >
                            <label for="contractNumber" class="col-lg-6" style="text-align: right">Contract Number: </label>
                            <input name="contractNumber" type="text" style="font-size: 20px; height: 30px; width: 200px" /><br /><br />

                            <label for="clientId" class="col-lg-6" style="text-align: right">Select Client: </label>
                            <select asp-for="ContractDetail.ClientId" asp-items="ViewBag.ClientId" name="clientId" style="height: 30px;width: 200px">
                                <option value="">All</option>
                            </select><br /><br />

                            <label for="buyerId" class="col-lg-6" style="text-align: right">Buyer: </label>
                            <select asp-for="ContractDetail.BuyerId" asp-items="ViewBag.BuyerId" name="buyerId" style="height: 30px;width: 200px">
                                <option value="">All</option>
                            </select><br /><br />

                            <label for="contractStatus" class="col-lg-6" style="text-align: right">Filter Current or Expired: </label>
                            <select name="contractStatus" asp-items="ViewBag.ContractStatus" style="height: 30px;width: 200px">
                                <option value="">All</option>
                                <option value="Current">Current</option>
                                <option value="Expired">Expired</option>
                            </select><br /><br />

                            <label for="startDate" class="col-lg-6" style="text-align: right">Start Date: </label>
                            <input name="startDate" id="startDate" type="date" style="height: 30px; width: 200px" />
                            <label>Greater Than</label>
                            <input type="radio" name="stimeDivider" value="greater" />
                            <label>Less Than</label>
                            <input type="radio" name="stimeDivider" value="less" /><br /><br />

                            <label for="endDate" class="col-lg-6" style="text-align: right">End Date: </label>
                            <input name="endDate" type="date" style="height: 30px; width: 200px" />
                            <label>Greater Than</label>
                            <input type="radio" name="etimeDivider" value="greater" />
                            <label>Less Than</label>
                            <input type="radio" name="etimeDivider" value="less" /><br /><br />

                            @*<label for="keyword" class="col-lg-6" style="text-align: right">Search: </label>
                            <input name="keyword" type="text" style="font-size: 20px; height: 30px; width: 200px" /><br /><br />*@

                            <div style="text-align:center">
                                <input type="submit" value="Search" class="btn btn-default"/>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </header>
    </div>
</body>
</html>

